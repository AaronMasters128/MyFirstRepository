package SharedSteps;

import org.openqa.selenium.*;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.interactions.Action;

public class Login extends Browser
{
	// Declare Actions builder as a static so it can be used throughout test suite 
		static Actions builder;
		
		
	// Set Login Credentials
		public String EmailAddress;
		public String Password;
		
			public void getLogin()
			{
			
			// Declare new instance of Actions as builder, incorporating driver variable
			builder = new Actions(driver);
			
			// Click on the Sign In button
			builder.moveToElement(driver.findElement(By.cssSelector("a.login"))).click().build().perform();
			
			// Get locations
			WebElement username = driver.findElement(By.name("email"));
			WebElement password = driver.findElement(By.name("passwd"));
			WebElement Login = driver.findElement(By.id("SubmitLogin"));

			// Enter username and password then click Login or Submit Login
			username.sendKeys(EmailAddress);
			password.sendKeys(Password);
			Login.click();
			}
}
